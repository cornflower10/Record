<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.record.activity.RecordDocInfoActivity">
    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_institution_name"
            android:hint="执法单位信息"
            style="@style/editText"/>
    <android.support.v7.widget.AppCompatEditText
        style="@style/editText"
        android:id="@+id/ed_pageNum"
        android:hint="文书号"
       />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed_thing_"
        android:hint="交通事故时间"
        style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_thing_11"
            android:hint="交通事故地点"
            style="@style/editText"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_34R34R"
            android:hint="天气"
            style="@style/editText" />
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed_factAndResponsibility"
        android:hint="交通事故事实及责任"
        style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_compensateAndResult"
            android:hint="损害赔偿调解结果"
            style="@style/editText" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_date"
            android:hint="日期"
            style="@style/editText" />

       <TextView
           android:textSize="@dimen/text_12_sp"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="@dimen/margin_16"
           android:text="当事人1:"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_name1"
            android:hint="姓名"
            style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_idCard1"
            android:hint="驾驶证或身份证号码"
            style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_mobile1"
            android:hint="联系电话"
            style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_transportation1"
            android:hint="交通方式"
            style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_transportationType1"
            android:hint="机动车型号、牌号"
            style="@style/editText" />

        <TextView
            android:textSize="@dimen/text_12_sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="当事人2:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_name2"
            android:hint="姓名"
            style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_idCard2"
            android:hint="驾驶证或身份证号码"
            style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_mobile2"
            android:hint="联系电话"
            style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_transportation2"
            android:hint="交通方式"
            style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_transportationType2"
            android:hint="机动车型号、牌号"
            style="@style/editText" />
        <TextView
            android:textSize="@dimen/text_12_sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="当事人3:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_name3"
            android:hint="姓名"
            style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_idCard3"
            android:hint="驾驶证或身份证号码"
            style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_mobile3"
            android:hint="联系电话"
            style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_transportation3"
            android:hint="交通方式"
            style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_transportationType3"
            android:hint="机动车型号、牌号"
            style="@style/editText" />
        <TextView
            android:textSize="@dimen/text_12_sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="当事人4:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_name4"
            android:hint="姓名"
            style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_idCard4"
            android:hint="驾驶证或身份证号码"
            style="@style/editText"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_mobile4"
            android:hint="联系电话"
            style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_transportation4"
            android:hint="交通方式"
            style="@style/editText" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ed_transportationType4"
            android:hint="机动车型号、牌号"
            style="@style/editText" />
    <android.support.v7.widget.AppCompatButton
        android:textSize="@dimen/text_16_sp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
       android:layout_margin="@dimen/margin_16"
        android:id="@+id/bt"
        android:text="确 定"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
