    <!--九宫格-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_make_doc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_document_make" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文书制作"
                    android:textColor="@color/text_color_66"
                    android:textSize="@dimen/text_15_sp" />
            </LinearLayout>
            <View
                android:layout_gravity="center_vertical"
                android:background="@color/divide_line"
                android:layout_width="1dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:id="@+id/ll_always_doc_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_ocument_template" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常用文书模板设置"
                    android:textColor="@color/text_color_66"
                    android:textSize="@dimen/text_15_sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_gravity="center_vertical"
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_null_doc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_blank_document" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="空白文书"
                    android:textColor="@color/text_color_66"
                    android:textSize="@dimen/text_15_sp"  />
            </LinearLayout>
            <View
                android:layout_gravity="center_vertical"
                android:background="@color/divide_line"
                android:layout_width="1dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:id="@+id/ll_cacul"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_alculator" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事故调解计算器"
                    android:textColor="@color/text_color_66"
                    android:textSize="@dimen/text_15_sp"  />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_gravity="center_vertical"
            android:background="@color/divide_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_alarm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="办案提醒闹铃"
                    android:textColor="@color/text_color_66"
                    android:textSize="@dimen/text_15_sp"  />
            </LinearLayout>
            <View
                android:layout_gravity="center_vertical"
                android:background="@color/divide_line"
                android:layout_width="1dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:id="@+id/ll_ptoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_photo_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事故照片排版"
                    android:textColor="@color/text_color_66"
                    android:textSize="@dimen/text_15_sp"  />
            </LinearLayout>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
