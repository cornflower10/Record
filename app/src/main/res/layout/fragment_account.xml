<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.record.fragment.MainFragment">
    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/account_bac_img"
        android:layout_width="match_parent"
        android:layout_height="135dp">
        <ImageView
            android:id="@+id/iv"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_centerHorizontal="true"
            android:src="@drawable/account_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_marginTop="9dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
          <TextView
              android:text="海泽王"
              android:textSize="@dimen/text_13_sp"
              android:textColor="@android:color/white"
              android:id="@+id/tv_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
            <View
                android:id="@+id/v"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@android:color/white"
                android:layout_width="1dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="0806"
                android:layout_toRightOf="@+id/v"
                android:textSize="@dimen/text_13_sp"
                android:textColor="@android:color/white"
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="6dp"
            android:textSize="@dimen/text_10_sp"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/rl_info"
            android:text="修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
      <LinearLayout
          android:background="@android:color/white"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_marginTop="@dimen/margin_16"
            android:id="@+id/rl_company_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv1"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_centerVertical="true"
                android:src="@drawable/account_unit_infor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位信息"
                android:textSize="@dimen/text_16_sp"
                android:textColor="@color/text_color_3232"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/text_16_sp"
                />
        </RelativeLayout>

          <View
              style="@style/divider_line_margin_left"/>
        <RelativeLayout
            android:id="@+id/rl_traffic_accident_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_2"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_centerVertical="true"
                android:src="@drawable/account_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交通事故责任图解"
                android:textSize="@dimen/text_16_sp"
                android:textColor="@color/text_color_3232"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/text_16_sp"
                />
        </RelativeLayout>

          <View
              style="@style/divider_line_margin_left"/>
        <RelativeLayout
            android:id="@+id/rl_traffic_accident_law"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_3"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_centerVertical="true"
                android:src="@drawable/account_traffic_law"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交通事故处理相关法律"
                android:textSize="@dimen/text_16_sp"
                android:textColor="@color/text_color_3232"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_right_arrow"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/text_16_sp"
                />
        </RelativeLayout>
          <View
              style="@style/divider_line_march"/>
          </LinearLayout>
        <LinearLayout
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                style="@style/divider_line_march"/>
          <RelativeLayout
              android:id="@+id/rl_talk"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <ImageView
                  android:id="@+id/iv_4"
                  android:layout_marginLeft="@dimen/margin_16"
                  android:layout_centerVertical="true"
                  android:src="@drawable/account_tucao"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/iv_4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="平台吐槽"
                  android:textSize="@dimen/text_16_sp"
                  android:textColor="@color/text_color_3232"
                  android:layout_marginLeft="@dimen/margin_16"
                  android:layout_marginTop="12dp"
                  android:layout_marginBottom="12dp"/>
              <ImageView
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/home_right_arrow"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/text_16_sp"
                  />
          </RelativeLayout>
          <View
              style="@style/divider_line_margin_left"/>
          <RelativeLayout
              android:id="@+id/rl_update"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <ImageView
                  android:id="@+id/iv_5"
                  android:layout_marginLeft="@dimen/margin_16"
                  android:layout_centerVertical="true"
                  android:src="@drawable/account_update"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/iv_5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="版本更新"
                  android:textSize="@dimen/text_16_sp"
                  android:textColor="@color/text_color_3232"
                  android:layout_marginLeft="@dimen/margin_16"
                  android:layout_marginTop="12dp"
                  android:layout_marginBottom="12dp"/>
              <ImageView
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/home_right_arrow"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/text_16_sp"
                  />
          </RelativeLayout>
          <View
              style="@style/divider_line_margin_left"/>
          <RelativeLayout
              android:id="@+id/rl_clear_cache"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <ImageView
                  android:id="@+id/iv_6"
                  android:layout_marginLeft="@dimen/margin_16"
                  android:layout_centerVertical="true"
                  android:src="@drawable/account_clean"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/iv_6"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="清除缓存"
                  android:textSize="@dimen/text_16_sp"
                  android:textColor="@color/text_color_3232"
                  android:layout_marginLeft="@dimen/margin_16"
                  android:layout_marginTop="12dp"
                  android:layout_marginBottom="12dp"/>
              <ImageView
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/home_right_arrow"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/text_16_sp"
                  />
          </RelativeLayout>
          <View
              style="@style/divider_line_margin_left"/>
          <RelativeLayout
              android:id="@+id/rl_about"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <ImageView
                  android:id="@+id/iv_7"
                  android:layout_marginLeft="@dimen/margin_16"
                  android:layout_centerVertical="true"
                  android:src="@drawable/account_about"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <TextView
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/iv_7"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="关于App"
                  android:textSize="@dimen/text_16_sp"
                  android:textColor="@color/text_color_3232"
                  android:layout_marginLeft="@dimen/margin_16"
                  android:layout_marginTop="12dp"
                  android:layout_marginBottom="12dp"/>
              <ImageView
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/home_right_arrow"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/text_16_sp"
                  />
          </RelativeLayout>
            <View
                style="@style/divider_line_march"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            style="@style/divider_line_march"/>
          <TextView
              android:background="@android:color/white"
              android:id="@+id/tv_exit"
              android:textColor="@color/text_color_3232"
              android:textSize="@dimen/text_18_sp"
              android:padding="@dimen/padding_bottom_15"
              android:gravity="center"
              android:text="安全退出"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
        <View
            android:layout_marginBottom="10dp"
            style="@style/divider_line_march"/>
    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
